# Copy this file to .env and update with your values

# Application Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=False
RELOAD=False

# Database Configuration
DATABASE_URL=sqlite:///data/hotel.db

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your-hotel-email@gmail.com
EMAIL_PASSWORD=your-app-password
USE_TLS=True
EMAIL_DEMO_MODE=False

# Hotel Information
HOTEL_NAME=Grand Hotel
HOTEL_ADDRESS=123 Luxury Avenue, Hotel District, City 12345
HOTEL_PHONE=+1-555-HOTEL-1
HOTEL_EMAIL=your-hotel-email@gmail.com
HOTEL_WEBSITE=https://grandhotel.com

