# Copy this file to .env and update with your values

# Application Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=False
RELOAD=False

# Database Configuration
DATABASE_URL=sqlite:///data/hotel.db

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your-hotel-email@gmail.com
EMAIL_PASSWORD=your-app-password
USE_TLS=True
EMAIL_DEMO_MODE=False

# Hotel Information
HOTEL_NAME=Grand Hotel
HOTEL_ADDRESS=123 Luxury Avenue, Hotel District, City 12345
HOTEL_PHONE=+1-555-HOTEL-1
HOTEL_EMAIL=your-hotel-email@gmail.com
HOTEL_WEBSITE=https://grandhotel.com

# Admin Configuration
ADMIN_EMAIL=admin@grandhotel.com
ENABLE_ADMIN_NOTIFICATIONS=True

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7 